        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.PageViewActivity"></activity>
        <activity android:name=".activity.ListBookRecycleActivity" />
        <activity android:name=".activity.ListAdapterActivity" />
        <activity android:name=".activity.ListBooksActivity" />
        <activity android:name=".activity.AddBookActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>